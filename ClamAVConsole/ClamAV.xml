<?xml version="1.0" encoding="utf-8" ?>
<clamav>
  <confguration>
    <!--server, client or combined-->
    <mode>server</mode>
    <!--Program, App, Local, Roaming-->
    <database>program</database>
    <!--Program, App, Local, Roaming-->
    <log>program</log>
    <update>
        <startdate format="dd-MMM-yyyy">10-feb-2019</startdate>
        <starttime format="HH:mm:ss">03:00:00</starttime>
        <schedule>minute</schedule>
        <timeout>1</timeout>
    </update>
  </confguration>
  <scans>
    <scan id="dive_c">
      <startdate format="dd-MMM-yyyy">10-feb-2019</startdate>
      <starttime format="HH:mm:ss">00:30:00</starttime>
      <schedule>day</schedule>
      <timeout>1</timeout>
      <path>c:\</path>
    </scan>
    <scan id="dive_e">
      <startdate format="dd-MMM-yyyy">10-feb-2019</startdate>
      <starttime format="HH:mm:ss">01:00:00</starttime>
      <schedule>week</schedule>
      <timeout>1</timeout>
      <path>e:\</path>
    </scan>
  </scans>
  <forwarders>
    <forwarder id="syslog">
      <type>SYSLOG</type>
      <host>earth</host>
      <protocol>rfc3164</protocol>
      <severity>Emergency</severity>
      <facility>Kernel</facility>
      <port>514</port>
    </forwarder>
  </forwarders>
</clamav>